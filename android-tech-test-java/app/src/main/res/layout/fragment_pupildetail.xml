<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/constraintLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_horizontal">

	<ImageView
		android:id="@+id/pupil_image"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginTop="64dp"
		app:layout_constraintBottom_toTopOf="@+id/pupil_id"
		app:layout_constraintEnd_toEndOf="@+id/textView"
		app:layout_constraintStart_toEndOf="@+id/textView"
		app:layout_constraintTop_toTopOf="parent" />


	<TextView
		android:id="@+id/textView"
		style="@style/TextDetail"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:layout_marginLeft="32dp"
		android:text="@string/pupil_detail_id"
		app:layout_constraintBaseline_toBaselineOf="@+id/pupil_id"
		app:layout_constraintEnd_toStartOf="@+id/pupil_id"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/pupil_id"
		style="@style/TextDetail"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toTopOf="@+id/pupil_name"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/textView"
		app:layout_constraintTop_toBottomOf="@+id/pupil_image"
		tools:text="123" />


	<TextView
		android:id="@+id/textView2"
		style="@style/TextDetail"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:layout_marginLeft="32dp"
		android:text="@string/pupil_detail_name"
		app:layout_constraintBaseline_toBaselineOf="@+id/pupil_name"
		app:layout_constraintEnd_toStartOf="@+id/pupil_name"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/pupil_name"
		style="@style/TextDetail"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toTopOf="@+id/country"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/textView2"
		app:layout_constraintTop_toBottomOf="@+id/pupil_id"
		tools:text="Abigayle Quigley" />


	<TextView
		android:id="@+id/textView3"
		style="@style/TextDetail"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:layout_marginLeft="32dp"
		android:text="@string/pupil_detail_country"
		app:layout_constraintBaseline_toBaselineOf="@+id/country"
		app:layout_constraintEnd_toStartOf="@+id/country"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/country"
		style="@style/TextDetail"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="480dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/textView3"
		app:layout_constraintTop_toBottomOf="@+id/pupil_name"
		tools:text="India" />


</android.support.constraint.ConstraintLayout>